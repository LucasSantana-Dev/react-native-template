{
  "name": "react-native-template",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "expo lint",
    "lint:fix": "expo lint --fix --fix-type-imports --fix-unused-imports --fix-import-sort --fix-unused-vars --fix-missing-imports --fix-no-unused-imports",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "rimraf node_modules .expo android ios",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "prebuild": "expo prebuild --clean",
    "depcheck": "knip",
    "check-outdated": "npm outdated",
    "check-versions": "ncu --format group",
    "update-deps": "ncu -u",
    "audit:critical": "npm audit --audit-level critical",
    "audit:high": "npm audit --audit-level high",
    "audit:moderate": "npm audit --audit-level moderate",
    "security:check": "node scripts/security-check.js",
    "security:full": "npm run audit:critical && npm run audit:high && npm run security:check",
    "e2e:ios": "detox test --configuration ios.sim.debug",
    "e2e:android": "detox test --configuration android.emu.debug",
    "e2e:build:ios": "detox build --configuration ios.sim.debug",
    "e2e:build:android": "detox build --configuration android.emu.debug",
    "e2e:test:ios": "detox test --configuration ios.sim.debug --cleanup",
    "e2e:test:android": "detox test --configuration android.emu.debug --cleanup",
    "sentry:upload-sourcemaps": "sentry-cli releases files upload-sourcemaps",
    "sentry:create-release": "sentry-cli releases new",
    "sentry:finalize-release": "sentry-cli releases finalize",
    "bundle:analyze": "expo export --platform all --dev --output-dir ./dist && npx source-map-explorer 'dist/**/*.js'",
    "bundle:stats": "expo export --stats",
    "bundle:size": "npx expo export --platform all --output-dir ./dist && find ./dist -name '*.js' -exec wc -c {} + | sort -n | tail -10",
    "quality:check": "node scripts/check-code-quality.js",
    "quality:file-size": "find . -name '*.ts' -o -name '*.tsx' -o -name '*.js' -o -name '*.jsx' | grep -v node_modules | grep -v .expo | xargs wc -l | sort -nr | head -20",
    "quality:complexity": "npx eslint --format=table --rule='complexity: [error, { max: 12 }]' '**/*.{ts,tsx,js,jsx}' --ignore-pattern 'node_modules/**' --ignore-pattern '.expo/**'",
    "performance:profile": "expo start --dev-client --no-dev --minify"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-navigation/bottom-tabs": "^7.4.0",
    "@react-navigation/elements": "^2.6.3",
    "@react-navigation/native": "^7.1.8",
    "@sentry/react-native": "^7.4.0",
    "@shopify/flash-list": "^2.1.0",
    "@shopify/react-native-performance": "^4.1.2",
    "expo": "~54.0.20",
    "expo-constants": "~18.0.10",
    "expo-font": "~14.0.9",
    "expo-haptics": "~15.0.7",
    "expo-image": "~3.0.10",
    "expo-linking": "~8.0.8",
    "expo-notifications": "^0.32.12",
    "expo-router": "~6.0.13",
    "expo-secure-store": "^15.0.7",
    "expo-splash-screen": "~31.0.10",
    "expo-status-bar": "~3.0.8",
    "expo-symbols": "~1.0.7",
    "expo-system-ui": "~6.0.8",
    "expo-updates": "^29.0.12",
    "expo-web-browser": "~15.0.8",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.54.2",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-mmkv": "^3.3.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "^15.9.0",
    "react-native-toast-message": "^2.2.1",
    "react-native-web": "~0.21.0",
    "react-native-worklets": "0.5.1",
    "source-map-explorer": "^2.5.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.38.0",
    "@testing-library/react-native": "^12.9.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "@types/react": "~19.1.0",
    "@types/react-test-renderer": "^18.3.0",
    "@typescript-eslint/parser": "^8.46.2",
    "detox": "^20.44.0",
    "eslint": "^9.25.0",
    "eslint-config-expo": "~10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-native": "^5.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-expo": "^54.0.13",
    "knip": "^5.45.0",
    "npm-check-updates": "^19.1.1",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.46.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "private": true
}
